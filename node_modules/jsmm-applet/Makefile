all: lib/colorpicker/jquery.ui.colorPicker.js lib/jsmm/jsmmparser.js test

# color picker
lib/colorpicker/jquery.ui.colorPicker.js: lib/colorpicker/jquery.ui.colorPicker.coffee
	node_modules/.bin/coffee -c lib/colorpicker/jquery.ui.colorPicker.coffee

# back end
lib/jsmm/jsmmparser.js: lib/jsmm/jsmmparser.jison
	cd lib/jsmm; ../../node_modules/.bin/jison jsmmparser.jison

test: lib/test.js lib/jsmm/jsmmparser.js lib/jsmm/*.js
	node lib/test.js

clean:
	rm lib/jsmm/jsmmparser.js

.PHONY: all clean test

